<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Activities.HomePage">

    <RelativeLayout
        android:id="@+id/f"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/exo_2"
                android:includeFontPadding="false"
                android:text="Automated Parking Management App"
                android:textColor="#5B5B5B"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_logouts" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:elevation="7dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/gradd"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/prepaidusers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/sfpro"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sfpro"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="Prepaid\nUsers"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/vippasses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/sfpro"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sfpro"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="VIP\nPasses"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/todayscollection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/sfpro"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sfpro"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="Today's\nCollection"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/missingpasses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/sfpro"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sfpro"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="Missing\nPasses"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/s"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/gradd"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- <ProgressBar
                 android:id="@+id/progressBar"
                 android:layout_width="90dp"
                 android:layout_marginLeft="40dp"
                 android:layout_centerVertical="true"
                 style="?android:attr/progressBarStyleLarge"
                 android:layout_height="90dp"
                 android:indeterminateDrawable="@drawable/circle"
                 android:indeterminate="true" />


 -->

            <RelativeLayout
                android:id="@+id/chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp">

                <ProgressBar
                    android:id="@+id/circularProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/circle" />

                <TextView
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:maxLength="6"
                    android:text="0"
                    android:textColor="#ff00"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <TextView
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/chart"
                android:fontFamily="@font/exo_2"
                android:includeFontPadding="false"
                android:text="Parking Status"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/chart"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/exo_2"
                    android:includeFontPadding="false"
                    android:text="Occupied: "
                    android:textColor="#ff00"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/occupied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/exo_2"
                    android:includeFontPadding="false"
                    android:maxLength="8"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/chart"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/exo_2"
                    android:includeFontPadding="false"
                    android:text="Available: "
                    android:textColor="#98C90B"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/availabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/exo_2"
                    android:includeFontPadding="false"
                    android:maxLength="8"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="14sp" />


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--<Button
        android:id="@+id/print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/sfpro"
        android:background="@drawable/border"
        android:text="Print Pass"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />-->

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FD3552"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/sfpro"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Checkout"
            android:textColor="#fff"
            android:textSize="18sp" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/sfpro"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Print Pass"
            android:textColor="#fff"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>